pipeline {
    agent any 
    stages {
        stage('Building') {
           steps {
                echo 'Starting build'
                sh '''
                    sudo apt -y install python3.9
                    pip3 install --upgrade pip
                    pip3 install virtualenv
                    virtualenv -p /usr/bin/python3.9 venv
                    . venv/bin/activate
                    pip3 install -r requirements.txt
                '''
            }
        }
        stage('Testing') {
            steps {
                echo 'Starting test'
                sh '''
                . venv/bin/activate
                pytest --cov=tests --cov-report term -vs
                '''
            }
        }
        stage('Linting') {
            steps {
                echo 'Starting lint'
                sh '''
                python3 -m pylint --output-format=parseable --fail-under=95 module --msg-template="{path}:{line}: [{msg_id}({symbol}), {obj}] {msg}" | tee pylint.log || echo "pylint exited with $?"
                '''
                echo "linting Success, Generating Report"
                recordIssues enabledForFailure: true, aggregatingResults: true, tool: pyLint(pattern: 'pylint.log')
            }
        }
        stage('Deploy') {
            steps {
                echo 'Starting deploy to the app server'
                echo "Stopping any current running app"
                sh "nohup kill \$(ps -ef | grep /app/app.py | grep -v grep | awk '{print \$2}') &"
                echo 'Starting deployment'
                sh "JENKINS_NODE_COOKIE=dontKillMe nohup python3 app/app.py &"
            }
        }
        stage('Release') {
            steps {
                echo 'Starting Release'
            }
        }
    }
}
